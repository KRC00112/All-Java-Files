package geometricSeries;

import java.util.Scanner;

public class Solution {
	
	public static void main(String[]args) {
		
		Scanner in = new Scanner(System.in);
       
 
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            int product=1;
            int sum=0;
            
            for(int i=0;i<=n-1;i++) {
            	
            	for(int j=0;j<=n-1;j++) {
            		
	            	product*=2;
	            	
	            	sum+=(product*b);
	            		
	            		
            		
            	}
            	
            	System.out.println(a+sum);
            	
            	
            }
            
            
            
            
            
            
            
            
        
        in.close();
		
		
		
		
	}

}
